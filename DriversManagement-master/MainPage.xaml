<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriversManagement.MainPage"
             BackgroundColor="Black">


    <ScrollView>
        <VerticalStackLayout
            Spacing="70"
            Margin="20"
            Padding="20,0"
            VerticalOptions="Center">

            <Image
            Source="trucks.png"
            SemanticProperties.HeadingLevel="Level1"
            HeightRequest="200"
            WidthRequest="500"
            HorizontalOptions="Center"/>

            <Label
                
                Text="Truck rental"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="30"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center"
               />
            <Label
                
                Text="We offer truck rental services for the transportation of your goods at the best prices."
                SemanticProperties.HeadingLevel="Level1"
                SemanticProperties.Description="We offer truck rental services for the transportation of your goods at the best prices."
                FontSize="20"
                TextColor="White"
                HorizontalOptions="Center" />



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
